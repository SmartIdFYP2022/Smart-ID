<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Smart_ID.Views.NavigationPages.DashBoard"
             Title="DashBoard"
              NavigationPage.HasNavigationBar="False"
             xmlns:vm="clr-namespace:Smart_ID.ViewModels.NavigationPagesViewModels"
             BackgroundColor="#f7f7f7">
    <ContentPage.BindingContext>
        <vm:DashBoardViewModel />
    </ContentPage.BindingContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Frame Grid.Row="0"
               BackgroundColor="DarkBlue"
               CornerRadius="100"
               Margin="-30,-90,-30,0"
               >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="60"></ColumnDefinition>

                </Grid.ColumnDefinitions>
                <ImageButton Grid.Column="0"
                             Source="list.png"
                             Margin="30,-33,0,0"
                             HorizontalOptions="Start"
                            Command="{Binding btnSettings}" ></ImageButton>
                <Label Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center" x:Name="WelcomeLbl">
                    <Label.FormattedText>
                        <FormattedString >
                            <Span Text="Welcome back" TextColor="#a9c6df" FontSize="Title" />
                            <Span Text=",Arip! " TextColor="#f7f7f7" FontSize="Title"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <ImageButton Grid.Column="2"
                             Source="man.png"
                             Margin="0,-33,20,0"
                              
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Command="{Binding btnProfile}"
                             ></ImageButton>
            </Grid>
        </Frame>

        <Frame Grid.Row="1"
               Padding="10"
               CornerRadius="15"
               Margin="30,-60,30,40"
               BackgroundColor="#0B0605"
               BorderColor="Transparent">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height=" *"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Grid.Row="0"
                       Text="Current Balance"
                       FontAttributes="Bold"
                       Margin="10,5"
                       FontSize="15"
                       TextColor="White"
                       ></Label>
                <Label 
                    Grid.Row="1"
                    Text="                 10000.00 Rs                  "
                    FontSize="20"
                    TextColor="White"
                    TextDecorations="Underline"  
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    FontAttributes="Bold">

                </Label>
                <Frame Grid.Row="2" 
                       Padding="0" BackgroundColor="Transparent"
                       BorderColor="Transparent"
                       >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=" *"></ColumnDefinition>
                            <ColumnDefinition Width=" 90"></ColumnDefinition>
                            <ColumnDefinition Width=" *"></ColumnDefinition>
                            <ColumnDefinition Width=" 90"></ColumnDefinition>


                        </Grid.ColumnDefinitions>
                        <ImageButton 
                            Grid.Column="0"
                            Source="incomming.png"
                            VerticalOptions="CenterAndExpand"
                            HorizontalOptions="CenterAndExpand"
                            
                        Command="{Binding TransactionPageButton}"   
                            ></ImageButton>

                        <ImageButton 
                            Grid.Column="2"
                             VerticalOptions="CenterAndExpand"
                            HorizontalOptions="CenterAndExpand"
                            Source="outgoing.png"
                            
                        Command="{Binding TransactionPageButton}"   
                            ></ImageButton>
                        <Frame Grid.Column="1"
                               BackgroundColor="Transparent"
                               BorderColor="Transparent">
                            <Grid>
                                <Grid.RowDefinitions >
                                    <RowDefinition Height=" *"></RowDefinition>
                                    <RowDefinition Height=" *"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0"
                                       Text="Income"
                                       FontAttributes="Bold"
                                       VerticalOptions="End"
                                       HorizontalOptions="Center"
                                       TextColor="White"
                                       FontSize="9"></Label>
                                <Label Grid.Row="1"
                                       Text="20,000"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="White"
                                       FontSize="15"></Label>


                            </Grid>


                        </Frame>
                        <Frame Grid.Column="3"
                               BackgroundColor="Transparent"
                               BorderColor="Transparent">
                            <Grid>
                                <Grid.RowDefinitions >
                                    <RowDefinition Height=" *"></RowDefinition>
                                    <RowDefinition Height=" *"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0"
                                       Text="Outcome"
                                       FontAttributes="Bold"
                                       VerticalOptions="End"
                                       HorizontalOptions="Center"
                                       TextColor="White"
                                       FontSize="9"></Label>
                                <Label Grid.Row="1"
                                       Text="20,000"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="White"
                                       FontSize="15"></Label>


                            </Grid>


                        </Frame>
                    </Grid>
                </Frame>
            </Grid>
        </Frame>
        <Frame Grid.Row="3"
               Padding="10"
               BorderColor="Transparent"
               Margin="10,10,10,30">
            <ScrollView >
               
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <ImageButton
                        Margin="5,0,10,0"
                    Grid.Column="0"
                    Source="qr.png" 
                         BackgroundColor="Transparent"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"
                         ></ImageButton>
                    <ImageButton
                        
                        Margin="5,0,10,0"
                    Grid.Column="1"
                    Source="walet.png" 
                         BackgroundColor="Transparent"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"
                        Command="{Binding TransactionPageButton}"
                         ></ImageButton>
                    <ImageButton
                        
                        Margin="5,0,10,0"
                    Grid.Column="2"
                    Source="mobilebanking.png" 
                         BackgroundColor="Transparent"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"
                         ></ImageButton>
                    <ImageButton
                    Grid.Column="3"
                        
                        Margin="5,0,10,0"
                    Source="application.png" 
                         BackgroundColor="Transparent"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"
                         ></ImageButton>
                    <ImageButton
                    Grid.Column="4"
                        
                        Margin="5,0,10,0"
                    Source="help.png" 
                         BackgroundColor="Transparent"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"
                         ></ImageButton>
                </Grid>
            </ScrollView>
        </Frame>
    </Grid>
    
</ContentPage>