<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Smart_ID.Views.NavigationPages.DashBoard"
             Title="DashBoard"
             xmlns:vm="clr-namespace:Smart_ID.ViewModels.NavigationPagesViewModels"
             BackgroundColor="#0d1332">
    <ContentPage.BindingContext>

        <vm:DashBoardViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
            </Grid.RowDefinitions>


            <!--top user profile frame -->

            <Frame 
                Grid.Row="0"
                BackgroundColor="White"
                Opacity="0.6"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                Margin="-20,-25,-80,20"
                CornerRadius="70"
                BorderColor="Transparent"
                >
            </Frame>
            <Frame 
                Grid.Row="0"
                BackgroundColor="White"
                Opacity="0.6"
                Margin="0,135,0,5"
                BorderColor="Transparent"
                >
            </Frame>

            <!--history user frame -->
            <Frame Grid.Row="1" 
                   Padding="10"
                   BackgroundColor="#0d1332" 
                   BorderColor="Transparent"
                   Opacity="0.1"
                   CornerRadius="20"
                   Margin="2"
                   >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Frame Grid.Column="0" BackgroundColor="White" Margin="1,0" CornerRadius="20"/>
                    <Frame Grid.Column="1" BackgroundColor="White" Margin="1,0" CornerRadius="20"/>
                    <Frame Grid.Column="2" BackgroundColor="White" Margin="1,0" CornerRadius="20"/>
                </Grid>
            </Frame>

            <!--history user frame -->
            <Frame Grid.Row="2" 
                   BackgroundColor="#0d1332"
                   Padding="15,3"
                   BorderColor="Transparent"
                   CornerRadius="20"
                   Margin="2">
                <Label Text="Filter" TextColor="White"></Label>
            </Frame>

            <!--DataGrid-->
            <Frame Grid.Row="3" 
                   Padding="5"
                   BackgroundColor="White" 
                   BorderColor="Transparent"
                   CornerRadius="20"
                   Opacity="0.1"
                   Margin="2">
            </Frame>

        </Grid>
    </ScrollView>
</ContentPage>