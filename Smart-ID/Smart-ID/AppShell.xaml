<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Smart_ID.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Smart_ID"
    xmlns:views="clr-namespace:Smart_ID.Views.NavigationPages"
    Shell.NavBarIsVisible="false"
    Shell.FlyoutBehavior="Flyout">

    <TabBar>
        <Tab Title="Dashboard">
            <ShellContent ContentTemplate="{DataTemplate views:DashBoard}" />
        </Tab>
        <Tab Title="Profile">
            <ShellContent ContentTemplate="{DataTemplate views:Profile}" />
        </Tab>
        <Tab Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate views:Settings}" />
        </Tab>
    </TabBar>

</Shell>
